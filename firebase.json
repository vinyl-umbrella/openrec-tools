{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(js|css|ttf|ico)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=21600,must-revalidate,public"
          }
        ]
      }
    ]
  }
}
